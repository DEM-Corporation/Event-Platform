<resources>

    <style name="Theme.EventPlatform" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/black</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:itemBackground"> @color/white_background </item>
    </style>

    <!-- BottomSheetDialog theme  -->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_event_info_shape</item>
    </style>


<!--    Switch theme-->
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">

        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:colorControlNormal">@color/blue</item>
        <item name="android:colorControlHighlight">@color/blue</item>

    </style>

</resources>