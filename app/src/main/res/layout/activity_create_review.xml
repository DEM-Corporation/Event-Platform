<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_background"
    android:layout_height="match_parent"
    tools:context=".activities.EventDescriptionActivity">

    <ImageButton
        android:id="@+id/back_from_create_review_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_btn_background"
        android:padding="10dp"
        app:tint="@color/back_btn_icon_color"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@color/simple_text"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/event_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit_txt_shape"
        android:hint="@string/review"
        android:inputType="textMultiLine"
        android:minHeight="50dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:textColor="@color/simple_text"
        android:textColorHint="@color/simple_text" />

    <Button
        android:id="@+id/next_btn_from_eventdisk_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/sign_up_btn"
        android:text="@string/create"
        android:textColor="@color/sign_up_btn_text_color"
        android:textSize="18sp" />


</RelativeLayout>